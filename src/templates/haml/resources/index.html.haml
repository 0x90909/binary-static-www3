%h1= l('Resources')
%p= l('Do you want to learn more about the markets and how to trade them? Check out the resources below.')

.row
    .col
        %p.media
            %img{:src => url_for('images/pages/resources/asset-index.svg')}
        %p= l('View the full list of assets, contract types and durations.')
        %p.media
            %a.pjaxload.button{:href => url_for('/resources/asset_index')}= l('Asset Index')
    .col
        %p.media
            %img{:src => url_for('images/pages/resources/trading-times.svg')}
        %p= l('View the operating hours of the markets you can trade.')
        %p.media
            %a.pjaxload.button{:href => url_for('trading_times.cgi')}= l('Trading Times')
    .col
        %p.media
            %img{:src => url_for('images/pages/resources/contract-guide.svg')}
        %p= l('Learn about the different ways to trade on the markets.')
        %p.media
            %a.pjaxload.button{:href => url_for('/resources/contract_guide')}= l('Trading Guide')
    .col
        %p.media
            %img{:src => url_for('images/pages/resources/pricing-table.svg')}
        %p= l('View contract prices across a range of barriers and durations.')
        %p.media
            %a.pjaxload.button{:href => url_for('/resources/pricing_table')}= l('Pricing Table')
    .col
        %p.media
            %img{:src => url_for('images/pages/resources/rise-fall-table.svg')}
