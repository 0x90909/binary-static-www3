- stash(title => l('Contact us'));

.grd-container.grd-default-container
  .grd-grid-12.grd-parent
    .grd-grid-2.grd-grid-mobile-12
      %img.responsive{:src => url_for('images/pages/contact/contact-us-icon.svg')}
    .grd-grid-4.grd-grid-mobile-12
      %h1= l("Contact Us")
      - my $faq_url = "https://binary.desk.com/customer/" . lc(stash->{language}) . "/portal/articles";
      %p!= l("You'll find answers to most of your questions on the <a href='[_1]' target='_blank'>FAQ</a> page.", $faq_url)
      %p!= l("Email: <a href='mailto:[_1]'>[_1]</a>", 'support@binary.com')
      %label.grd-grid-5.grd-grid-mobile-12.grd-no-gutter{:for => 'telephone'}= l('Telephone:')
      - my $contact_number = customer_support_telephone();
      %select.grd-grid-7.grd-grid-mobile-12.grd-no-gutter{:name => 'telephone'}
        %option= l('Select Country')
        - foreach (sort keys %{ $contact_number }) {
          - my $number = $contact_number->{$_};
          %option{:value => $number}= $_
        - }
    .grd-grid-5.grd-grid-mobile-12
      %h1= l("Company addresses")
