- stash(title => l('Contact us'));

.grd-container.grd-default-container
  .grd-grid-12.grd-parent
    .grd-grid-2.grd-grid-mobile-6
      %img.responsive{:src => url_for('images/pages/contact/contact-us-icon.svg')}
    .grd-grid-4.grd-grid-mobile-12
      %h1= l("Contact Us")
      .grd-row-padding
      - my $faq_url = "https://binary.desk.com/customer/" . lc(stash->{language}) . "/portal/articles";
      .grd-row-padding
        != l("You'll find answers to most of your questions on the <a href='[_1]' target='_blank'>FAQ</a> page.", $faq_url)
        != l("Email: <a href='mailto:[_1]'>[_1]</a>", 'support@binary.com')
      %span.grd-grid-12.grd-parent.grd-row-padding
        %label.grd-grid-5.grd-grid-mobile-12.grd-no-gutter= l('Telephone:')
        - my $contact_number = customer_support_telephone();
        %select.grd-grid-7.grd-grid-mobile-12.grd-no-gutter{:name => 'telephone'}
          %option= l('Select Country')
          - foreach (sort keys %{ $contact_number }) {
            - my $number = $contact_number->{$_};
            %option{:value => $number}= $_
          - }
      %span.grd-grid-12.grd-parent.grd-row-padding
        %label.grd-grid-5.grd-grid-mobile-12.grd-no-gutter= l('Skype:')
        .grd-grid-2.grd-grid-mobile-3.grd-no-gutter
          %a{:href =>"skype:?call"}
            %img.responsive{:src => url_for('images/pages/contact/skype-icon.svg')}
      %span.grd-grid-12.grd-parent.grd-row-padding
        %label.grd-grid-5.grd-grid-mobile-12.grd-no-gutter= l('Live chat:')
        .grd-grid-2.grd-grid-mobile-3.grd-no-gutter
          %a{:href =>""}
            %img.responsive{:src => url_for('images/pages/contact/chat-icon.svg')}
        .grd-grid-2.grd-grid-mobile-3.grd-no-gutter
    .grd-grid-5.grd-grid-mobile-12
      %h1= l("Company addresses")
      .grd-row-padding
      .grd-row-padding
        .address-heading= l('Malta')
        %div= l('Binary (Europe) Ltd, Mompalao Building, Suite 2, Tower Road, Msida MSD1825')
      .grd-row-padding
        .address-heading= l('Isle of Man')
        %div= l('Binary (IOM) Ltd, First Floor, Millennium House, Victoria Road, Douglas, IM2 4RW')
      .grd-row-padding
        .address-heading= l('Malaysia')
        %div= l('C-2-01 SME Technopreneur Center 2 63000 Cyberjaya')
